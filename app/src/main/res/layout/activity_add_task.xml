<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rishabh.todo.AddTaskActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Overlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/task_title"
            android:scaleType="fitEnd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="Enter the Task Title"
            android:id="@+id/text"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:textStyle="bold"/>
        </LinearLayout>
        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"
            android:maxLines="1"
            android:hint="Enter Task here"
            android:gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:scaleType="fitEnd"
            android:src="@drawable/date"
            android:tint="@color/colorPrimary" />
        <EditText
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="Due Date"
            android:focusable="false"
            android:layout_marginRight="35dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/time2"
            android:scaleType="fitEnd"/>
        <EditText
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="Due Time"
            android:focusable="false"
            android:layout_marginRight="35dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/category"
                android:tint="@color/colorPrimary"
                android:layout_marginLeft="5dp"
                android:scaleType="fitEnd"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:paddingLeft="5dp"
                android:text="Category"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/spinner_task"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/priority"
                android:tint="@color/colorPrimary"
                android:scaleType="fitEnd"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="Set Priority"
                android:gravity="bottom"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/radio_group"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:id="@+id/high_priority"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="High"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Medium"
                android:id="@+id/medium_priority"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Low"
                android:id="@+id/low_priority"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
